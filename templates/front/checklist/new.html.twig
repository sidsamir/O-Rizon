{% extends 'base.html.twig' %}

{% block title %}Nouvelle Checklist{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-10 px-3 sm:px-5">
        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
            <!-- Header de la page -->
            <div class="bg-gradient-to-r from-green-400 to-green-600 p-4 text-white text-3xl font-bold">
                <h1 class="text-center">Créez votre Checklist</h1>
            </div>

            <div class="flex flex-wrap md:flex-nowrap">
                <!-- Contenu principal : Formulaire -->
                <div class="order-2 md:order-1 w-full md:w-3/5 p-6">
                    <h2 class="text-xl font-semibold text-gray-800">Détails de la checklist</h2>
                    <p class="mt-2 text-gray-600">Remplissez les champs ci-dessous pour créer une nouvelle checklist.</p>
                    <!-- Inclusion du formulaire -->
                    {{ include('front/checklist/_form.html.twig') }}
                </div>

                <!-- Section de l'image décorative -->
                <div class="order-1 md:order-2 w-full md:w-2/5 flex justify-center items-center bg-gray-50 p-4">
                    <img src="{{ asset('images/lake.jpg') }}" alt="Créativité" class="max-w-xs md:max-w-sm lg:max-w-md">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
