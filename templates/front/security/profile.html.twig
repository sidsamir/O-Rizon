{% extends 'base.html.twig' %}

{% block title %}Mon Profil - O'Rizon{% endblock %}

{% block body %}

	<main class="min-h-screen bg-gradient-to-r from-green-500 to-blue-600 relative">
		<!-- Message de Bienvenue Dynamique avec Alpine.js -->
		<div x-data="{ show: true }" x-show="show" x-init="setTimeout(() => show = false, 5000)" @click="show = false" class="fixed top-20 right-20 bg-green-600 text-white p-6 rounded-lg shadow-lg cursor-pointer" x-transition:enter="ease-out duration-300" x-transition:leave="ease-in duration-300" style="backdrop-filter: blur(15px);">
			Bienvenue, {{ app.user.username }}!
		</div>

		<!-- Section Profil Optimisée -->
		<section class="pt-28 lg:pt-36 pb-20">
			<div class="container mx-auto px-6 sm:px-12 lg:px-20">
				<div class="text-center mb-16">
					<h2 class="text-4xl sm:text-5xl font-bold text-white">Votre Espace Personnel</h2>
					<p class="text-xl text-gray-200 mt-4">
						Ici, vous pouvez gérer votre profil et découvrir vos options.
					</p>
				</div>
				<div class="flex justify-center">
					<div class="bg-white rounded-2xl shadow-xl max-w-2xl mx-auto">
						<div class="md:flex">
							<div class="md:flex-shrink-0">
								<img class="h-48 w-full object-cover md:h-full md:w-48 rounded-l-2xl" src="{{ asset(randomAvatarUrl) }}" alt="Profil">
							</div>
							<div class="p-8">
								<div class="uppercase tracking-wide text-sm text-indigo-600 font-semibold">Profil</div>
								<a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">{{ app.user.firstname }} {{ app.user.lastname }}</a>
								<p class="mt-2 text-gray-600">{{ app.user.biographie | default('Pas de biographie disponible.') }}</p>
								<div class="mt-4 space-x-4">
									<a href="{{ path('app_main_mytrip') }}" class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition ease-in-out duration-150">
										Explorer mes voyages
									</a>
									<a href="{{ path('app_biographie', {'id': app.user.id}) }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition ease-in-out duration-150">
										Éditer votre profil
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

{% endblock %}


