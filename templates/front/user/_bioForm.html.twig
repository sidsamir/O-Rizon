{% block form %}
    <div class="max-w-4xl mx-auto mt-10">
        {{ form_start(form, {'attr': {'class': 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4'}}) }}

        <div class="mb-4">
            {{ form_label(form.biography, 'Éditer votre biographie', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.biography, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', 'style': 'border-color: #4FD1C5;'}}) }}
        </div>

        {# Ajoutez ici des champs supplémentaires si nécessaire #}

        <div class="mb-6">
            {{ form_errors(form) }} {# Affiche les erreurs du formulaire s'il y en a #}
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Enregistrer
            </button>
            <a href="{{ path('accueil') }}" class="inline-block align-baseline font-bold text-sm text-teal-500 hover:text-teal-800">
                Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
